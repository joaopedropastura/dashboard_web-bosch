<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("../template/head.ejs") %>
    <link rel="stylesheet" href="/css/telas-instrutores/avaliacao.css">
    <link rel="stylesheet" href="/css/telas-instrutores/prova-alunos.css">
    <script src="/js/prova-alunos.js"></script>

    <title>Document</title>
</head>
<body>
    <main>
        <%- include("../template/nav-bar.ejs") %>
        <div class="box-content">
            <form id="form" action="/cadastro-questao/<%= nomeProva.Prova_ID %>" method="post">
                <input value="<%=nomeProva.Prova_ID%>" name="prova" hidden>
                <input value="<%=alunos[0].EDV%>" name="edv" hidden>
                <input value="1" name="nome" hidden>
                <div class="card-prova">
                    <div class="add-avaliacao">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Adicionar Questão
                        </button>
                    </div>
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">

                                <div class="modal-header">
                                    <div id="desc-questao">
                                        <h5 class="modal-title" id="exampleModalLabel" name="nome" value="#numQuestao" >Questao: <span id="numQuestao"></span> </h5>
                                        <h6 value="<%= nomeProva.Prova_ID %>" name="prova"> <%= nomeProva.Nome %></h6>
                                    </div>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>

                                <div class="modal-body">
                                    <div class="mb-3 forms">
                                        <label class="form-label">Review: </label>
                                        <textarea class="form-control" aria-label="With textarea" name="review"></textarea>
                                        <!-- <input type="text" class="form-control" placeholder="nome da prova" name="review"> -->
                                    </div>
                                    <div class="mb-3 forms">
                                        <label class="form-label">Correção: </label>
                                        <textarea class="form-control" aria-label="With textarea" name="correcao"></textarea>
                                        <!-- <input type="text" class="form-control" placeholder="nome da prova" name="correcao"> -->
                                    </div>
                                    <div id="pe">
                                        <div id="nota">
                                            <div class="mb-3 forms">
                                                <label class="form-label">Nota: </label>
                                                <input type="text" class="form-control" placeholder="nome da prova" name="notas_questao">
                                            </div>
                                            <div class="mb-3 forms">
                                                <label class="form-label">Valor: </label>
                                                <input type="text" class="form-control" placeholder="nome da prova" name="valor_questao">
                                            </div>
                                        </div>
                                        <div id="conteudos">
                                            <div class="mb-3 caixas">
                                                <label for="nome" class="form-label">Conteudo:</label>
                                                <div class="dropdown">
                                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                                      Selecione os Conteúdos
                                                    </button>
                                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                                        <% for (let i=0; i<conteudos.length; i++) { %>
                                                            <li >
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="checkbox" value='<%= conteudos[i].Conteudo_ID %>' name="conteudo" id="flexCheckChecked">
                                                                    <label class="form-check-label" for="flexCheckChecked">
                                                                        <%= conteudos[i].Nome %>
                                                                    </label>
                                                                </div>
                                                            </li>
                                                        <% } %>
                                                    </ul>
                                                  </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">cancelar</button>

                                    <button type="submit" onclick="adiciona()" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div  id="info-pag">
                <b><%= alunos[0].Nome  %> ></b>
                <b><%= nomeProva.Nome %> </b>
            </div>
            <form id="form2" action="lista-alunos" method="post">
                <div class="prova">
                   
                </div>
            </form>

            <!-- <div id="header">

             
            </div>
            <div id="add-questao">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Adicionar Questão
                </button>
                <div id="questooes">

                </div>
            </div> -->
        </div>
    </main>
    <script src="/js/prova-alunos.js"></script>
</body>

</html>